<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black2">

    <ImageView
        android:id="@+id/iv_splash_logo"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/icon_logo" />

    <Button
        android:id="@+id/guide_btn_login"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:background="@drawable/icon_btn_login" />

    <Button
        android:id="@+id/guide_btn_register"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@id/guide_btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/icon_btn_register" />
</RelativeLayout>